req "lib/brood/brood" as brood;

use brood::suite;

suite("Closures", |s| {
  s.describe("captured values", |t| {
    class Number {
      self as struct {
        n: 0,
      }

      new(self, n) {
        self.n = n;
      }

      fn add_and_store(self, n) {
        ret self.n += n;
      }
    }

    fn generator() {
      let x = Number(0);
      ret [x] |offset| {
        ret x.add_and_store(offset + 1);
      };
    }

    let gen = generator();
    t.expect(gen(0)).to_be(1);
    t.expect(gen(1)).to_be(3);
    t.expect(gen(2)).to_be(6);
  });
});
